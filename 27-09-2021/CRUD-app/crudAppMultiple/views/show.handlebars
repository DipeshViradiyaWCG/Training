<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">

    <title>Hello, world!</title>
  </head>
  <body>
    {{> navbar}}
    <a href="/logout" class="btn btn-primary">Logout</a>
    <a href="/change-password" class="btn btn-primary">Change Password</a>
    {{!-- <img src="images/{{profilepic}}" > --}}
    <div class="row justify-content-evenly mt-3">
        <div class="col-5">
            <h3><u>product data</u></h3>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Product Name</th>
                        <th scope="col">Category Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Description</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each productdata}}
                    <tr>
                        <td>{{product_name}}</td>
                        <td>{{product_category}}</td>
                        <td>{{price}}</td>
                        <td>{{product_desc}}</td>
                        <td><a href="/edit-product/{{_id}}" class="btn btn-primary">Edit</a>
                        <a href="/delete-product/{{_id}}" class="btn btn-danger">Delete</a></td>

                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <a href="/add-product" class="btn btn-success">Add product</a>
        </div>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
