{{> navbar}}
    <div class="row justify-content-evenly mt-3">
        <div class="col-6">
            <form method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="firstname" class="form-label">Product Name</label>
                    <input type="text" class="form-control" id="firstname" name="productname" value="{{productdata.product_name}}" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="lastname" class="form-label">Category Name</label>
                    <input type="text" class="form-control" id="lastname" name="productcategory" value="{{productdata.product_category}}" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="class" class="form-label">Price</label>
                    <input type="text" class="form-control" id="class" name="price" value="{{productdata.price}}" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="stream" class="form-label">Description</label>
                    <input type="text" class="form-control" id="stream" name="productdesc" value="{{productdata.product_desc}}" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                <label for="stream" class="form-label">Product Image</label>
                <input type="file" class="form-control" id="stream" name="productimg" aria-describedby="emailHelp">
            </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>